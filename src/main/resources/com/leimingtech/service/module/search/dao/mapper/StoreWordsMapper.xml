<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.leimingtech.service.module.search.dao.mapper.StoreWordsMapper">
    <resultMap id="BaseResultMap" type="com.leimingtech.core.entity.base.StoreWords">
        <result column="words_id" property="wordsId" jdbcType="VARCHAR"/>
        <result column="keyword" property="keyword" jdbcType="VARCHAR"/>
        <result column="quanping" property="quanPing" jdbcType="VARCHAR"/>
        <result column="shouzimu" property="shouZiMu" jdbcType="VARCHAR"/>
        <result column="words_num" property="wordsNum" jdbcType="VARCHAR"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>
    
   	<sql id="whereStatement">
		<where>
			1 = 1
			<if test="wordsId != null and wordsId != ''">
				and words_id = #{wordsId}
			</if>
			<if test="keyword != null">
				and keyword = #{keyword}
			</if>
			<if test="quanPing != null">
				and quanping = #{quanPing}
			</if>
			<if test="shouZiMu != null">
				and shouzimu = #{shouZiMu}
			</if>
			<if test="updateTime != null">
				and update_time &gt; #{updateTime}
			</if>
		</where>
	</sql>
	
    <insert id="saveStoreWords" parameterType="com.leimingtech.core.entity.base.StoreWords">
    	insert into shop_store_words 
    	<trim prefix="(" suffix=")" suffixOverrides=",">
    	  <if test="wordsId != null" >
	        words_id,
	      </if>
	      <if test="keyword != null" >
	        keyword,
	      </if>
	      <if test="quanPing != null" >
	        quanping,
	      </if>
	      <if test="shouZiMu != null" >
	        shouzimu,
	      </if>
	      <if test="wordsNum != null" >
	        words_num,
	      </if>
	        update_time,
    	</trim>
    	<trim prefix="values (" suffix=")" suffixOverrides="," >
    	  <if test="wordsId != null and wordsId !=''" >
	        #{wordsId},
	      </if>
    	  <if test="keyword != null" >
	        #{keyword},
	      </if>
    	  <if test="quanPing != null" >
	        #{quanPing},
	      </if>
    	  <if test="shouZiMu != null" >
	        #{shouZiMu},
	      </if>
    	  <if test="wordsNum != null" >
	        #{wordsNum},
	      </if>
	        #{updateTime},
    	</trim>
    </insert>
	
	<delete id="delete" parameterType="java.lang.String">
		delete from shop_store_words where words_id=#{wordsId}
	</delete>
	
	<update id="update" parameterType="com.leimingtech.core.entity.base.StoreWords">
		update shop_store_words
		<set>
			<if test="keyword != null">
				keyword=#{keyword},
			</if>
			<if test="quanPing != null">
				quanping=#{quanPing},
			</if>
			<if test="shouZiMu != null">
				shouzimu=#{shouZiMu},
			</if>
			update_time=#{updateTime}
		</set>
	</update>
	
	<select id="isExist" parameterType="java.lang.String" resultType="java.lang.String">
		select words_id from shop_store_words where keyword=#{keyword}
	</select>
	
	<update id="updateWordsNum" parameterType="com.leimingtech.core.entity.base.StoreWords">
		update shop_store_words set words_num = words_num+#{wordsNum},update_time=#{updateTime} where words_id=#{wordsId}
	</update>
	
	
	<sql id="selectPageWhere">
		<where>
			1 = 1
			<if test="quanPing != null">
				and quanping like
				<if test="dbName == 'oracle'">'%'||#{quanPing}||'%'</if>
				<if test="dbName == 'mssql'">'%'+#{quanPing}+'%'</if>
				<if test="dbName == 'mysql'">concat('%',#{quanPing},'%')</if>
			</if>
			<if test="keyword != null">
				or keyword like
				<if test="dbName == 'oracle'">'%'||#{keyword}||'%'</if>
				<if test="dbName == 'mssql'">'%'+#{keyword}+'%'</if>
				<if test="dbName == 'mysql'">concat('%',#{keyword},'%')</if>
			</if>
			<if test="shouZiMu != null">
				or shouzimu like
				<if test="dbName == 'oracle'">'%'||#{shouZiMu}||'%'</if>
				<if test="dbName == 'mssql'">'%'+#{shouZiMu}+'%'</if>
				<if test="dbName == 'mysql'">concat('%',#{shouZiMu},'%')</if>
			</if>
		</where>
	</sql>
	
	<select id="keywordMatch" resultMap="BaseResultMap" parameterType="com.leimingtech.core.entity.base.StoreWords">
		select * from shop_store_words <include refid="selectPageWhere"/> order by words_num desc
	</select>
	
	<delete id="deleteAll">
		delete from shop_store_words
	</delete>
	
</mapper>
