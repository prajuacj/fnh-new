    <!-- 查询领导挂帮贫困户店铺信息 -->
    <select id="selectListByLeaderId" resultMap="BaseResultMap" parameterType="string">
        select s.store_id,s.store_name,s.store_label,s.description,s.store_tel
        from shop_store s
        left join shop_r_leader_seller leader on leader.seller_id = s.member_id
        where s.is_del = 0 and s.is_show = 1
		and leader.leader_id = #{memberId}
    </select>
    
     <!--  根据ID删除数据 -->
    <update id="delete" parameterType="java.lang.String">
        delete from shop_store  where store_id = #{id,jdbcType=VARCHAR}
    </update>

    <!-- 根据name查询实体 -->
    <select id="findByMebername" resultMap="BaseResultMap" parameterType="java.lang.String">
        select <include refid="Base_Column_List" />
        from shop_store where member_name = #{memberName}
    </select>
    
    <select id="listStoreByCondition" resultMap="BaseResultMap" parameterType="com.leimingtech.core.entity.base.Store">
		select <include refid="Base_Column_List1" /> ,
		(select COUNT(1) from shop_goods b WHERE b.store_id = ss.store_id) as store_goods_count
		from shop_store ss
		<where>
			<if test='scId != null and scId != ""'>
				and sc_id=#{scId}
			</if>
			<if test='storeName != null and storeName != ""'>
				and store_name=#{storeName}
			</if>
			<if test='provinceId != null and provinceId != ""'>
				and province_id=#{provinceId}
			</if>
			<if test='storeRecommend != null and storeRecommend != ""'>
				and store_recommend=#{storeRecommend}
			</if>
		</where>
	</select>
	
	<select id="listStoreByCooperative" resultMap="listStoreResultMap" parameterType="java.lang.String">
		select  
			ss.store_id,ss.store_name,ss.description,ss.store_logo,ss.area_info,ss.store_address,ss.sc_id,
			(select COUNT(1) from shop_goods b WHERE b.store_id = ss.store_id) as store_goods_count
		from 
			shop_store ss
		where 
			ss.store_name like '%合作社'  
		<if test='provinceId != null and provinceId != ""'>
			and ss.province_id=#{provinceId}
		</if>
			and ss.is_del = 0
		<include refid="orderSort"/>
	</select>
	
	<resultMap id="listStoreResultMap" type="com.leimingtech.core.entity.base.Store" >
        <id column="store_id" property="storeId" jdbcType="VARCHAR" />
        <result column="store_name" property="storeName" jdbcType="VARCHAR" />
        <result column="description" property="description" jdbcType="VARCHAR" />
        <result column="store_logo" property="storeLogo" jdbcType="VARCHAR" />
        <result column="area_info" property="areaInfo" jdbcType="VARCHAR" />
        <result column="store_address" property="storeAddress" jdbcType="VARCHAR" />
        <result column="sc_id" property="scId" jdbcType="VARCHAR" />
        <result column="is_del" property="isDel" jdbcType="INTEGER"/>
        <result column="store_goods_count" property="storeGoodsCount" jdbcType="INTEGER" />
    </resultMap>
    
    <select id="findStoreByOne" resultMap="listStoreResultMap" parameterType="java.lang.String">
		select  
			ss.store_id,ss.store_name,ss.description,ss.store_logo,ss.area_info,ss.store_address,ss.sc_id,
			(select COUNT(1) from shop_goods b WHERE b.store_id = ss.store_id) as store_goods_count
		from 
			shop_store ss
		where 
			ss.store_id = #{storeId} and ss.is_del = 0 
	</select>
</mapper>